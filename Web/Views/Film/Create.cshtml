@model Web.Models.Film
<br />
@Html.Partial("InfoMessage")
@using (Html.BeginForm("Create", "Film", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @TempData["CurentImage"]
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.DisplayNameFor(t => t.Name)
        @Html.TextBoxFor(t => t.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Name)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(t => t.Description)
        @Html.TextBoxFor(t => t.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Description)
    </div>
    <div class="form-group ">
        @Html.DisplayNameFor(t => t.ImagePath)
        <br />
        <div class="btn btn-success">
            @Html.TextBoxFor(t => t.File, new { @class = "fileExistInModel", @type = "file", @value = Model.ImagePath  })
            @Html.HiddenFor(t => t.ImagePath)
            <span id="fileLabel">
                @Model.ImagePath
            </span>
        </div>
        <br />
        @Html.ValidationMessageFor(t => t.ImagePath)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(t => t.FilmDirector)
        @Html.TextBoxFor(t => t.FilmDirector, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.FilmDirector)
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(t => t.Year)
        @Html.TextBoxFor(t => t.Year, new { @class = "form-control" })
        @Html.ValidationMessageFor(t => t.Year)
    </div>
    <div class="form-group">
        @Html.DisplayName("Author")
        <input type="text" class="form-control" disabled="disabled" value="@User.Identity.Name">
    </div>
    <input type="submit" class="btn btn-success" />
}
